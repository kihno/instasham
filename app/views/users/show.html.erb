<div class="row">
  <div class="col-12 text-center" style="padding: 20px; background-color: #f2f2f2">
    <h1><%= @user.username %></h1>

    <div>
      <p><%= @user.followers.count %> <%= link_to "Followers", user_followers_path%></p>
      <p><%= @user.following.count %> <%= link_to "Following", user_following_path%></p>
    </div>

    <% if current_user && current_user.following.include?(@user) %>
      <%= button_to "Unfollow", unfollow_user_path, method: "POST", class: "btn btn-success" %>
    <% else %>
      <%= button_to "Follow", follow_user_path, method: "POST", class: "btn btn-success" %>
    <% end %>

    <h4><%= @user.bio %></h4>
  </div>
</div>

<% if current_user && current_user.id == @user.id %>
  <%= link_to "Edit Profile", edit_user_registration_path %>
<% end %>
